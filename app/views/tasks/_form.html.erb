<div class="row">
  <div class="col-xs-6 col-md-3 col-md-offset-3">
    <h2><%= @action %> task</h2>
  </div>
  <div class="col-xs-6 col-md-3 text-right">
    <h2><%= link_to "Back to index", tasks_path, class: "btn btn-primary" %></h2>
  </div>
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Task name"%>
        <%= f.text_field :name, placeholder: "Code my app", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Task description" %>
        <%= f.text_area :description, placeholder: "blablablablablabla", class: "form-control"   %>
      </div>
      <div class="form-group form-inline">
        <%= f.label :done, "Task is done ?", class: "checkbox"%>
        <%= f.check_box :done %>
      </div>
      <%= f.submit class: "btn btn-md btn-primary"%>

    <% end %>
  </div>
</div>



