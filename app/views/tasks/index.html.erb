<div class="row">
  <div class="col-xs-6 col-md-3 col-md-offset-3">
    <h2>My tasks</h2>
  </div>
  <div class="col-xs-6 col-md-3 text-right">
    <h2><%= link_to "Create new task", new_task_path, class: "btn btn-primary" %></h2>
  </div>
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="list-group">
      <% @tasks.each do |task| %>
        <div class="list-group-item">
            <% if task.done  %>
              <span class="badge done">
                <i class="fa fa-check" aria-hidden="true"></i>
              </span>
            <% else %>
              <span class="badge notdone">
                <i class="fa fa-times notdone" aria-hidden="true"></i>
              </span>
            <% end %>
            <h4 class="list-group-item-heading"><%= task.name %></h4>
            <div class="list-group-item-text">
              <%= link_to "View", task_path(task), class: "btn btn-primary btn-xs" %>
              <%= link_to "Edit", edit_task_path(task), class: "btn btn-warning btn-xs" %>
              <%= link_to "Delete", task_path(task),
                    class: "btn btn-danger btn-xs",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

